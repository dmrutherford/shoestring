---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
    <channel>
        <title>{{ site.title }}</title>
        <link>{{ site.url }}/</link>
        <description>{{ site.description }}</description>
        <language>{{ site.language }}</language>
        <lastBuildDate>{{ site.time | date_to_xmlschema }}</lastBuildDate>
        <generator>Shoestring</generator>
        <managingEditor>{{ site.email }}</managingEditor>{% for post in site.posts limit:10 %}
        <item>
            <title>{{ post.title }}</title>
            <link>{{ site.url }}{{ post.url }}</link>
            <guid>{{ site.url }}{{ post.url }}</guid>
            <author>{% if post.author %}{{ post.author }}{% else %}{{ site.author }}{% endif %}</author>{% if post.category %}
            <category>{{ post.category }}</category>{% endif %}
            <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
            <description>
{{ post.content | xml_escape }}
            </description>
        </item>{% endfor %}
    </channel>
</rss>